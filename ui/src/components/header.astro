---
import { ScrollHeader } from './Scrollheader';
import MattDeKreyAvatar from './avatar.astro';

export type Props = {
	siteTitle: string;
};

const mainNavLinks = [
	{
		route: `/about`,
		title: `About`,
	},
	{
		route: `/contact`,
		title: `Contact`,
	},
];

const hideHeaderClass = '-translate-y-full';
const showHeaderClass = 'bg-white';

const { siteTitle } = Astro.props;

// TODO: mobile menu
---

<ScrollHeader
	{{ showHeaderClass, hideHeaderClass }}
	className="z-10 motion-safe:transition-transform ease-in duration-100 fixed inset-x-0"
>
	<div
		class="flex flex-wrap items-center justify-between max-w-4xl p-2 mx-auto"
	>
		<a
			href="/"
			class="flex items-center gap-3 no-underline font-medium text-gray-900"
		>
			<MattDeKreyAvatar />
			<span class="text-xl font-bold tracking-tight">{siteTitle}</span>
		</a>

		<button
			class="items-center block px-3 py-2 border border-white rounded md:hidden"
			{/* onClick={() => toggleExpansion(!isExpanded)} */}
		>
			{/* Mobile hamburger menu */}
			<svg
				class="w-3 h-3 fill-current"
				viewBox="0 0 20 20"
				xmlns="http://www.w3.org/2000/svg"
			>
				<title>Menu</title>
				<path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
			</svg>
		</button>

		<nav
			class={`${
				/* isExpanded ? `block` : */
				`hidden`
			} md:flex md:items-center w-full md:w-auto`}
		>
			{
				mainNavLinks.map((link) => (
					<a
						href={link.route}
						class="block mt-4 no-underline md:inline-block md:mt-0 md:ml-6"
					>
						{link.title}
					</a>
				))
			}
		</nav>
	</div>
</ScrollHeader>
<div class="pt-16"></div>
