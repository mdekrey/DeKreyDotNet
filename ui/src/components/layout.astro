---
import Seo from '@/components/seo.astro';
import Header from './header.astro';
import Footer from './footer.astro';
import { twMerge } from 'tailwind-merge';

export interface Props {
	title: string;
	ogImage?: string | undefined;
	ogDescription?: string | undefined;
	mainClass?: string;
}

const { title, ogImage, ogDescription, mainClass } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<Seo title={title} ogImage={ogImage} ogDescription={ogDescription} />
	</head>
	<body>
		<div class="flex flex-col min-h-screen font-sans text-gray-900">
			<Header siteTitle="DeKrey.NET" />
			<slot name="no-scroll-header" />

			<main
				class={twMerge(
					'flex-1 w-full max-w-4xl px-4 py-8 mx-auto md:px-8 md:py-16 bg-white relative',
					mainClass
				)}
			>
				<slot />
			</main>

			<Footer class="bg-white" />
		</div>
	</body>
</html>
