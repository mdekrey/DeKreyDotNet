---
import { Picture } from 'astro:assets';

import headshotUrl from '@/images/headshot.jpg';
---

<Picture
	src={headshotUrl}
	class="rounded-full items-center justify-center w-10 h-10 inline-block"
	sizes="(min-resolution: 2dppx) 80px, (min-resolution: 1.5dppx) 60px, 40px"
	widths={[80, 60, 40]}
	alt=""
	formats={['webp', 'jpg']}
/>
